<CalculadoraLayout>:
    orientation: "vertical"
    padding: "8dp"
    
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Cor cinza para o fundo
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        size_hint_y: None
        height: "170dp"
        padding: "8dp"
        
        TextInput:
            id: display
            text: root.display_text
            readonly: True
            font_size: "24sp"
            background_color: 0.9, 0.9, 0.9, 1  # Cor cinza claro para o fundo do TextInput
            foreground_color: 0, 0, 0, 1  # Cor do texto (preto)
            font_size: "70"

    Image:
        source: "SESI.png"
        size_hint: None, None
        size: (70,70)

    GridLayout:
        cols: 4
        spacing: "5dp"

        Button:
            text: "C"
            on_press: root.clear_display()
            padding: "10dp"
            background_color: 0/255, 108/255, 181/255, 1  # Azul claro
            color: 1, 1, 1, 1  # Cor do texto (branco)
            font_size: "20sp"  # Tamanho da fonte aumentado

        Button:
            text: "( )"
            on_press: root.toggle_parentheses()
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"
            
        Button:
            text: "%"
            on_press: root.update_display("%")
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "^"
            on_press: root.update_display("**")
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "7"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "8"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "9"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "/"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "4"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "5"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "6"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "*"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "1"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "2"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "3"
