            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "-"
            on_press: root.update_display(self.text)
            background_color: 0/255, 108/255, 181/255, 1
            color: 1, 1, 1, 1
            font_size: "20sp"

        Button:
            text: "."
